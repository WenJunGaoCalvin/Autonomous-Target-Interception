    </link>
    <joint name="tilt_joint" type="revolute">
      <parent>roll_link</parent>
      <child>pitch_link</child>
      <physics>
        <ode>
          <implicit_spring_damper>1</implicit_spring_damper>
        </ode>
      </physics>

      <axis>
        <xyz>1 0 0</xyz>
        <dynamics>
          <damping>0.5</damping>
        </dynamics>
        <limit>
          <lower>-1.57079632</lower>
          <upper>1.57079632</upper>
          <!-- <lower>-3.14159265359</lower>
          <upper>3.14159265359</upper> -->
        </limit>
      </axis>
      <pose>0.045 0.0021 0.0199 0 0 0</pose>
    </joint>

    <plugin name="ros_gimbal_small_2d_pitch" filename="libGimbalSmall2dPluginPitch.so">
      <joint>tilt_joint</joint>
    </plugin>
    <plugin name="ros_gimbal_small_2d_yaw_rate" filename="libGimbalSmall2dPluginYawRate.so">
      <joint>yaw_joint</joint>
    </plugin>
    <plugin name="ros_gimbal_small_2d_yaw" filename="libGimbalSmall2dPluginYaw.so">
      <joint>yaw_joint</joint>
    </plugin>
    <plugin name="ros_gimbal_small_2d_roll" filename="libGimbalSmall2dPluginRoll.so">
      <joint>roll_joint</joint>
    </plugin>
  </model>
</sdf>
